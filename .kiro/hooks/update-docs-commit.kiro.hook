{
  "enabled": true,
  "name": "Update Docs on Commit",
  "description": "Automatically updates project documentation after every commit to keep docs in sync with code changes",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      ".git/COMMIT_EDITMSG",
      ".git/logs/HEAD"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "A commit has been made to the repository. Please review the recent changes and update any relevant documentation files including README.md, docs/ folder contents, and any other documentation that may be affected by the code changes. Focus on keeping documentation accurate and up-to-date with the current codebase state. Commit your work."
  }
}